{
  "name": "boilerplate",
  "version": "2.0.0",
  "description": "Boilerplate utilizando Typescript, React, NextJS e Styled Components!",
  "author": "Alquipo Neto",
  "license": "MIT",
  "repository": "github:Alquipo/boilerplate",
  "homepage": "https://www.linkedin.com/in/alquiponeto/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "generate": "yarn run plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "start-storybook -p 6006 -s public",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.0.4",
    "next-pwa": "^5.4.0",
    "next-seo": "^4.28.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/builder-webpack5": "^6.3.12",
    "@storybook/manager-webpack5": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@swc/core": "^1.2.105",
    "@swc/jest": "^0.2.5",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.35",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "eslint": "8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.6",
    "lint-staged": "^12.0.3",
    "plop": "^2.7.6",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2",
    "webpack": "^5.64.1"
  }
}
